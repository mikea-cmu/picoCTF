# Inventory to provision/administer a remote development environment

# In order to use this inventory change these values to match the output
# from Terraform or your own manual configuration of remote servers.

[remote_testing:children]
db
shell
web

[db]
remote_testing_db      ansible_connection=local   hostname=pico-aws-testing-db

[shell]
remote_testing_shell   ansible_connection=local   hostname=pico-aws-testing-shell

[web]
remote_testing_web     ansible_connection=local   hostname=pico-aws-testing-web

